    <footer>
        <a href="mailto:joaquin.elia@hotmail.com" class="email">joaquin.elia@hotmail.com</a>
        <menu>
            <ExternalLinks />
        </menu>
    </footer>
</section>

<style>
    #contact {
        background-color: var(--dark-blue);
        padding-bottom: 2rem;
        text-align: center;
    }
    #contact h2 {
        font-size: 2.8em;
        font-family: 'Mulish', sans-serif;
        letter-spacing: 1px;
        margin-bottom: 2rem;
    }
    #contact > p{
        font-size: .95em;
        line-height: 1.35rem;
    }
    .btn-container{
        width: 12.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin: 2rem auto;
        padding: .5rem .7rem;
        font-weight: 600;
        background-color: var(--gray-blue);
        color: var(--blue-color);
        cursor: pointer;
    }
    .btn-container span {
        position: relative;
        width: 44px;
        height: 44px;
        border: 1px solid var(--blue-color);
        border-radius: 50%;
        font-size: 1em;
    }
    span svg {
        width: 1.87rem;
        position: absolute;
        top: 50%;
        transform: translate(-50%, -50%);
    }
    footer{
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 2rem 4rem 0;
    }
    footer > a{
        position: relative;
        padding: .4rem;
        font-weight: 600;
    }
    menu{
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 1rem;
    }
    @media (max-width: 53rem) {
        footer{
            position: relative;
            flex-wrap: wrap;
            justify-content: center;
            gap: 2rem 4rem;
            padding: 1rem 2rem 0;
        }
    }
    @media (max-width: 29rem) {
        #contact {
            padding: 1rem 0;
        }
        #contact h2 {
            font-size: 2.3em;
            margin-bottom: 1rem;
        }
        p{
            font-size: .85em;
            line-height: 1.2rem;
        }
        .btn-container{
            margin: 1.5rem auto;
            padding: .3rem .7rem;
        }
        h3{
            font-size: 1.4em;
        }
        footer{
            gap: 1rem 2rem;
            padding: 1rem 2rem 0;
        }
        footer > a {
            order: 1;
        }
    }
</style>