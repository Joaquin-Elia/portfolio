---
import ProyectsData from "./ProyectsData.astro"
---

<section class="work" id="work">
    <h2 class="work-title">PROYECTOS</h2>
    <ProyectsData />
</section>

<style is:global>
.work{
    background: var(--gray-blue) url('../../assets/noise2.png');
    color: var(--blue-color);
}
.work-title{
    font-size: clamp(1.7em, 8vw, 2.7em);
    letter-spacing: -.7px;
    text-align: center;
    padding: 6rem 4rem;
    font-weight: 600;
}
.works {
    max-width: 120rem;
    margin: auto;
    position: relative;
    width: 100%;
    height: 100dvh;
    max-height: 70rem;
    min-height: 35rem;
    display: flex;
    justify-content: flex-end;
    padding: 0 4rem 2rem 0;
}
.works-text {
    width: 40%;
    position: absolute;
    top: 1rem;
    left: 4rem;
    z-index: 2;
}
.works-text h3 {
    max-width: 33rem;
    font-size: clamp(3.5em, 12vw, 7em);
    line-height: clamp(3.3rem, 11.5vw, 6.5rem);
    font-family: 'Mulish', sans-serif;
    letter-spacing: -1.5px;
}
.works-text h4 {
    margin-top: 1rem;
    font-size: 2em;
    letter-spacing: -0.8px;
}
.work-description {
    margin-top: 1rem;
    max-width: 31rem;
    text-wrap: pretty;
    font-size: 1.1em;
    line-height: 1.4;
}
.works img{
    width: 55%;
    max-width: 55rem;
    max-height: 45rem;
    object-fit: contain;
    transform: perspective(40rem) rotateY(-5deg);
}
@media (max-width: 75rem) {
    .works {
        padding-right: 3rem;
    }
    .works-text {
        left: 2rem;
    }
    .work-description {
        font-size: inherit;
    }
    .works img{
        width: 55%;
    }
}
@media (max-width: 53rem) {
    .work {
        padding: 2rem 2rem 0;
    }
    .works{
        width: 100%;
        max-height: 60rem;
        height: unset;
        flex-direction: column;
        gap: 2rem;
        padding: 0;
        left: 0;
    }
    .works-text {
        position: relative;
        width: 100%;
        margin-top: 3rem;
        left: 0;
    }
    .works img{
        width: 100%;
        left: 0;
        transform: perspective(0) rotateY(0);
        margin-bottom: 3rem;
    }
}
@media (max-width: 29rem) {
    .work {
        padding: 1rem;
    }
    .work-title{
        padding: 2rem 0;
    }
    .works {
        justify-content: flex-start;
        max-height: 45rem;
    }
    .work-description {
        margin-top: .5rem;
        font-size: .95em;
        line-height: 1.3;
    }
    .works-text h4 {
        margin-top: 1rem;
        font-size: 1.6em;
        letter-spacing: -0.6px;
    }
    .works img{
        margin-bottom: 2rem;
    }
}
</style>