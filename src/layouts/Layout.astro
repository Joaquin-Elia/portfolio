---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="shortcut icon" href="/PortfolioIcon.ico">
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@500;600&family=Mulish:wght@900&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--text-color: #fff;
		--blue-color: #154DDC;
		--dark-blue: #0A1C33;
		--gray-blue: #B5C5FF;
	}
	*{
		padding: 0;
		margin: 0;
		box-sizing: border-box;
		vertical-align: baseline;
	}
	img, picture, figure{
		max-width: 100%;
		display: block;
	}
	a {
		display: block;
	}
	li {
		list-style-type: none;
	}
	html {
		scroll-behavior: smooth;
	}
	h1, h2, h3, h4, p, a, span, strong {
		font-size: 1em;
		font-weight: inherit;
		font-style: inherit;
		text-decoration: none;
		color: inherit;
	}
	body {
		font-size: 100%;
		font-family: 'Inter', sans-serif;
		color: var(--text-color);
	}
</style>
